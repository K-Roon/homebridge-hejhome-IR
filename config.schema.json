{
  "pluginAlias": "HejhomeIR",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Hejhome IR"
      },
      "host": {
        "title": "Hejhome API Host",
        "type": "string",
        "required": true,
        "default": "http://localhost:8080"
      },
      "username": {
        "title": "Hejhome Username",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "Hejhome Password",
        "type": "string",
        "required": true,
        "format": "password"
      },
      "deviceNames": {
        "title": "Device Names",
        "type": "array",
        "required": true,
        "items": { "type": "string" },
        "description": "IR device names to control"
      }
    }
  }
}
